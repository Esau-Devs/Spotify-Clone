---
import Time from "@/icons/Time.astro";

import { type Song } from "@/lib/data";

interface Props {
    songs: Song[];
}

const { songs }: Props = Astro.props;
---

<table class="table-auto min-w-full text-left divide-y divide-gray-500/20">
    <thead class="">
        <tr class="text-zinc-300 text-sm uppercase">
            <th scope="col" class="px-4 py-2 font-light">#</th>
            <th scope="col" class="px-4 py-2 font-light">Title</th>
            <th scope="col" class="px-4 py-2 font-light">Album</th>
            <th scope="col" class="px-4 py-2 font-light"><Time /></th>
        </tr>
    </thead>
    <tbody>
        <tr class="h-[16px]"></tr>
        {
            songs.map((song, index) => (
                <tr class="text-gray-300 text-sm font-light hover:bg-white/10 transition duration-300 overflow-hidden">
                    <td class="px-6 py-4 rounded-tl-lg rounded-bl-lg w-5">
                        {index + 1}
                    </td>
                    <td class="px-6 py-4 flex gap-3">
                        <picture class="">
                            <img
                                src={song.image}
                                alt={`cover of ${song.title}`}
                                class="w-11 h-11"
                            />
                        </picture>
                        <div class="flex flex-col">
                            <h3 class="text-white text-base font-normal">
                                {song.title}
                            </h3>
                            <span class="text-gray-500 dark:text-gray-400 text-sm">
                                {song.artists.join(", ")}
                            </span>
                        </div>
                    </td>
                    <td class="px-6 py-4">{song.album}</td>
                    <td class="px-6 py-4 text-white rounded-tr-lg rounded-br-lg">
                        {song.duration}{" "}
                    </td>
                </tr>
            ))
        }
    </tbody>
</table>
